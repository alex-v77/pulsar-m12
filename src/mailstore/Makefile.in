.PHONY: all install clean distclean

CC = @CC@
CFLAGS = -Wall @CFLAGS@ @DEFS@ -I./.. -I./../util -I./../cfg -I./../md5 -I./.
LDFLAGS = @LDFLAGS@
LDLIBS = @LIBS@
AR = ar
ARFLAGS = rcs

AUTOCONF_FILES = Makefile

all: mailstore.a

mailstore.a:  \
  mailbox.o   \
  maildir.o   \
  mbox_ll.o   \
  mailstore.o
	$(AR) $(ARFLAGS) $@ $?

mbox_ll.o:    \
  mailstore.h \
  mailbox.h   \
  mbox_ll.c

mailbox.o:    \
  mailstore.h \
  mailbox.h   \
  mailbox.c

maildir.o:    \
  mailstore.h \
  maildir.h   \
  maildir.c
  
mailstore.o:  \
  mailstore.h \
  mailstore.c

clean:
	@rm -f *~ *.o *.a core

distclean: clean
	@rm -f $(AUTOCONF_FILES)

install:
